@page
@model IndexModel
@{
	ViewData["Title"] = "Tic Tac Toe";
}
<div class="text-center">
	<h1 class="display-4" id="welcomeUser">Welcome Player<span></span></h1>
</div>

<div class="container" id="userNameDiv">
	<input type="text" name="userNameInput" id="userNameInput" />
	<button class="btn btn-outline-primary" type="submit" id="userNameBtn">Save</button>
</div>


<select id="connectionList">
</select>
<button class="btn btn-outline-success" id="connectButton">Connect</button>

<div class="container">
	<h1 id="Score"></h1>
	<h3 id="UserName"></h3>
	<h4 id="turn"></h4>
</div>



@for (int i = 0; i < 9; i++)
{
	<button class="btn btn-outline-secondary" style="height: 100px; width: 100px; font-size: 50px;" id="button_@i"> </button>
	if ((i + 1) % 3 == 0)
	{
		<br />
	}
}


<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/client.js"></script>